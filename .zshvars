eval `dircolors /home/cam/.dir_colors/dircolors`

export TOOLCHAIN_ROOT=/mnt/apps/toolchain

export XCURSOR_THEME=macOS-White
export ELECTRON_OZONE_PLATFORM_HINT=wayland
export SDL_VIDEODRIVER=wayland
export DOTNET_ROOT=$HOME/.dotnet
export VULKAN_SDK_VERSION="1.4.328.1"
export VULKAN_SDK=$TOOLCHAIN_ROOT/vulkan/$VULKAN_SDK_VERSION/x86_64

path+=("$DOTNET_ROOT")
path+=("$DOTNET_ROOT/tools")
path+=("$HOME/.local/bin")
path+=("/usr/local/go/bin")
path+=("$TOOLCHAIN_ROOT/lsp/luals/bin")
path+=("$TOOLCHAIN_ROOT/Odin")
path+=("$TOOLCHAIN_ROOT/lsp/ols")
path+=("$TOOLCHAIN_ROOT/lsp/glsl_analyzer")
path+=("$VULKAN_SDK/bin")

export LD_LIBRARY_PATH=$VULKAN_SDK/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
export VK_ADD_LAYER_PATH=$VULKAN_SDK/share/vulkan/explicit_layer.d
export PKG_CONFIG_PATH=$VULKAN_SDK/share/pkgconfig/:$VULKAN_SDK/lib/pkgconfig${PKG_CONFIG_PATH:+:$PKG_CONFIG_PATH}


# custom quick cd commands
alias cda="cd /mnt/apps"
